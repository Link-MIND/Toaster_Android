<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="12dp"
  android:background="@drawable/shape_white_fill_12_rect"
  android:padding="14dp">

  <ImageView
    android:id="@+id/iv_clip_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_clip_24"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_clip_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="2dp"
    android:text="@string/search_clip_title"
    android:textAppearance="@style/Typography.suit.medium_16"
    android:textColor="@color/neutrals850"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/iv_clip_icon"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_clip_amount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/search_clip_amount_n"
    android:textAppearance="@style/Typography.suit.bold_14"
    android:textColor="@color/neutrals600"
    app:layout_constraintBottom_toBottomOf="@id/tv_clip_amount_num"
    app:layout_constraintEnd_toStartOf="@id/tv_clip_amount_num"
    app:layout_constraintEnd_toEndOf="@id/tv_clip_amount_num"/>

  <TextView
    android:id="@+id/tv_clip_amount_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:text="@string/search_result_clip_num"
    android:textAppearance="@style/Typography.suit.semibold_14"
    android:textColor="@color/neutrals600"
    app:layout_constraintBottom_toBottomOf="@id/iv_category_clip_arrow"
    app:layout_constraintEnd_toStartOf="@id/iv_category_clip_arrow"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_category_clip_arrow"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:src="@drawable/ic_arrow_18_svg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
