<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginHorizontal="30dp"
  android:background="@drawable/shape_white_fill_2_rect">

  <TextView
    android:id="@+id/tv_market_update_dialog_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginTop="20dp"
    android:text="업데이트 알림"
    android:textAppearance="@style/Typography.suit.bold_16"
    android:textColor="@color/neutrals800"
    android:textFontWeight="600"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_market_update_dialog_subtitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="@string/home_survey_subtitle"
    android:textAppearance="@style/Typography.suit.medium_12"
    android:textColor="@color/neutrals800"
    app:layout_constraintStart_toStartOf="@id/tv_market_update_dialog_title"
    app:layout_constraintTop_toBottomOf="@id/tv_market_update_dialog_title" />

  <TextView
    android:id="@+id/btn_market_update_dialog_skip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="22dp"
    android:layout_marginTop="65dp"
    android:layout_marginBottom="15dp"
    android:clickable="true"
    android:focusable="true"
    android:text="다음에"
    android:textAppearance="@style/Typography.suit.medium_12"
    android:textColor="@color/success"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_market_update_dialog_title" />

  <TextView
    android:id="@+id/btn_market_update_dialog_update"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="162dp"
    android:layout_marginEnd="15dp"
    android:clickable="true"
    android:focusable="true"
    android:text="지금 업데이트"
    android:textAppearance="@style/Typography.suit.medium_12"
    android:textColor="@color/success"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/btn_market_update_dialog_skip" />
</androidx.constraintlayout.widget.ConstraintLayout>
